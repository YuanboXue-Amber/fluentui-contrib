{
  "extends": ["../../.eslintrc.json", "plugin:react-hooks/recommended"],
  "ignorePatterns": ["!**/*"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "react-hooks/exhaustive-deps": "error"
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["stories/**/*.tsx", "stories/**/*.ts"],
      "rules": {
        "@nx/enforce-module-boundaries": "off"
      }
    }
  ]
}
